<% if current_user %>
   <h1>Task List</h1>
     <h2>タスク一覧</h2>

      <ul>
       <% @tasks.each do |task| %>
         <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
       <% end %>
      </ul>
       <%= link_to '新しいタスクの作成', new_task_path %>
       <%= link_to "ログアウト", logout_path, method: :delete %>
<% end %>